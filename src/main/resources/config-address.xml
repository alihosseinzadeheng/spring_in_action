<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="simpleAddress" class="springintro.bean.Address">
        <constructor-arg name="line1" value="151 Corner Street"/>
        <constructor-arg name="line2" value="152"/>
        <constructor-arg name="city" value="Albany"/>
        <constructor-arg name="state" value="NY"/>
        <constructor-arg name="zipCode" value="99999"/>
        <constructor-arg name="country" value="US"/>
    </bean>
    <bean name="simpleAddress2" class="springintro.bean.Address">
        <constructor-arg name="line1" value="89 Street"/>
        <constructor-arg name="line2" value="898"/>
        <constructor-arg name="city" value="Afgh"/>
        <constructor-arg name="state" value="MASH"/>
        <constructor-arg name="zipCode" value="2565"/>
        <constructor-arg name="country" value="IR"/>
    </bean>
</beans>